# Database Configuration
ATLASDB_URL=mongodb://127.0.0.1:27017/wanderLust
# For production, replace with your MongoDB Atlas connection string:
# ATLASDB_URL=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/wanderLust

# Session Secret (use a strong random string in production)
SECRET=mysupersecretcode

# Port Configuration
PORT=3000

# Cloudinary Configuration (required for image uploads)
CLOUD_NAME=your_cloud_name_here
CLOUD_API_KEY=your_api_key_here
CLOUD_API_SECRET=your_api_secret_here

# Node Environment
NODE_ENV=development
